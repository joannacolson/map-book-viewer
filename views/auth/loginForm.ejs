<h1>Login Form - Welcome Back</h1>

<form action="/auth/login" method="POST">
	<legend>Login Form</legend>

	<div class="form-group">
		<label for="login">Email</label>
		<input type="email" class="form-control" id="login" name="email" placeholder="Type your email address">
	</div>

	<div class="form-group">
		<label for="password">Password</label>
		<input type="password" class="form-control" id="password" name="password" placeholder="Type your password">
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>

<hr>

<h2>Or...</h2>
<a href="/auth/facebook" class="btn btn-lg btn-primary">
Login with Facebook <i class="glyphicon glyphicon-search"></i>
</a>
