<h1>Edit A Place</h1>

<form method="POST" action="/places/<%= place.id %>?_method=PUT">
	<legend>Edit Place for: <%= topic.name %></legend>

	<div class="form-group">
  	<label for="name">Name</label>
  	<input type="text" class="form-control" id="name" name="name" placeholder="Place's name" value="<%= place.name %>">
	</div>

	<div class="form-group">
  	<label for="address">Address</label>
  	<input type="text" class="form-control" id="address" name="address" placeholder="Place's address" value="<%= place.address %>">
	</div>

	<input type="hidden" name="topicId" value="<%= topic.id %>">

	<button type="submit" class="btn btn-success">Update This Place</button>
</form>
