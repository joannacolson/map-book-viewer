<h1>Places</h1>

<div class="row">
	<div class="col-md-6">
		<h4>Place Index for: <%= topic.name %></h4>

  	<% places.forEach(function(place) { %>

			<div class="well">
				Name: <a href="/places/<%= place.id %>"><%= place.name %></a>
			</div>

  	<% }) %>
	</div>
  <div class="col-md-6">
    <h4>Map</h4>
    <div id="map"></div>
  </div>
</div>

<form method="GET" action="/places/new">
	<input type="hidden" name="topicId" value="<%= topic.id %>">
  <button type="submit" class="btn btn-success">Add New Place</button>
</form>

<!-- scripts for Geocoding -->

<script>
  var markers = <%- JSON.stringify(places) %>;
</script>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAHaB1VXyYTaGD06ve5n966ykzpvp0ot78&callback=initMap">
</script>

<script src="/js/script.js"></script>
