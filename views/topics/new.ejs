<h1>Add A Topic</h1>

<form action="/topics" method="POST">
	<legend>New Topic for: <%= currentUser.getFullName() %></legend>

	<div class="form-group">
  	<label for="name">Name</label>
  	<input type="text" class="form-control" id="name" name="name" placeholder="Topic's name">
	</div>

	<div class="form-group">
  	<label for="description">Description</label>
  	<textarea class="form-control" id="description" name="description" placeholder="Topic's description" rows="4"></textarea>
	</div>

	<input type="hidden" name="userId" value="<%= userId %>">

	<button type="submit" class="btn btn-success">Add Topic</button>
</form>
