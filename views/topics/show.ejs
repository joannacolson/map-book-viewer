<h1>Display A Topic</h1>

<div class="row">
	<div class="col-md-12">
		<h4>Show Topic for: <%= currentUser.getFullName() %></h4>

		<div class="well">
			Name: <%= topic.name %>
		</div>

		<div class="well">
			Description: <%= topic.description %>
		</div>

	</div>
</div>

<hr>

<h4>Places</h4>

<% topic.places.forEach(function(place) { %>
  <div class="well">
      <a href="/places/<%= place.id %>"><%= place.name %></a>
  </div>
<% }); %>

	<form method="GET" action="/topics">
		<button type="submit" class="btn btn-warning">Topic Index for <%= currentUser.getFullName() %></button>
	</form>

<hr>

<form method="GET" action="/topics/<%= topic.id %>/edit">
  <button type="submit" class="btn btn-success">Edit This Topic</button>
</form>

<hr>

<form method="POST" action="/topics/<%= topic.id %>?_method=DELETE">
  <button type="submit" class="btn btn-danger">DELETE This Topic</button>
</form>
